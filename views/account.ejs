<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>My FavMovie</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	    <link rel="stylesheet" href="/style.css">
	    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
	   	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body>
		<div class="container">
			<div class="row">
				<!-- Register Section -->
				<div class="col-sm-4 col-sm-offset-1 well">
					<h2 class="account_title">Register</h2>
					<form action="/account/register" method="POST">
						<div class="form-group">
							<label for="username">Username</label>
							<% if (message.name_taken_message) { %>
							<span style="color:crimson"><%= message.name_taken_message %></span>
							<% } else if (message.name_length_message) { %>
							<span style="color:crimson"><%= message.name_length_message %></span>
							<% } %>
							<input type="text" class="form-control" id="username" name="username">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<% if (message.password_length_message) { %>
							<span style="color:crimson"><%= message.password_length_message %></span>
							<% } %>
							<input type="password" class="form-control" id="password" name="password">
						</div>
						<button type="submit" class="btn btn-info account_button">Register</button>
					</form>
				</div>
				<!-- Register Section end -->

				<!-- Login Section -->
				<div class="col-sm-4 col-sm-offset-2 well">
					<h2 class="account_title">Log In</h2>
					<form action="/account/login" method="POST">
						<div class="form-group">
							<label for="username">Username</label>
							<% if (message.user_not_exist_message) { %>
							<span style="color:crimson"><%= message.user_not_exist_message %></span>
							<% } %>
							<input type="text" class="form-control" id="username" name="username">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<% if (message.password_incorrect_message) { %>
							<span style="color:crimson"><%= message.password_incorrect_message %></span>
							<% } %>
							<input type="password" class="form-control" id="password" name="password">
						</div>
						<button type="submit" class="btn btn-info account_button">Log In</button>
					</form>
				</div>
				<!-- Login Section End -->
			</div>
			<div class="row">
				<a id="account_return_home" class="col-sm-2 col-sm-offset-5 text-center" href="/">Return to Dashboard</a>
			</div>
		</div>
	</body>
</html>