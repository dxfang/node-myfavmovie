<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>My FavMovie</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    	<!-- <link rel="stylesheet" href="style.css"> -->
	    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>
	<body>
		<div class="container">
		<% if (user.id) { %>
			<div class="row">
				<span>Hi, <%= user.name %>! | </span>
				<form action="/destroy" method="POST">
					<button type="submit" class="btn btn-default">Log out</button>
				</form>
			</div>
		<% } else { %>
			<div class="row">
				<a href="/account">Register / Log in</a>
			</div>
		<% } %>
			<div class="row">
				<form class="form-horizontal" action="/search" method="post">
					<div class="form-group col-sm-10">
					    <input type="text" class="form-control" id="search_movie" name="movie_title" placeholder="What movies are you looking for?">
					</div>
					<div class="col-sm-2">
						<button type="submit" class="btn btn-default">Find Movies!</button>
					</div>
				</form>
			</div>
			<!-- My movies display section -->
			<div class="row">
			<% if (user.id) { %>
			<% for (var movie in my_movies) { %>
				<div class="col-sm-3" style="height: 368px;">
					<a href="/my_movies/<%= my_movies[movie].id %>">
						<img src="https://image.tmdb.org/t/p/w185<%= my_movies[movie].image_url %>" alt="<%= my_movies[movie].title %>" style="width: 185px; height: 278px;">
					</a>
					<div><%= my_movies[movie].title %></div>
					<div><%= my_movies[movie].release_date %></div>
				</div>
			<% } %>
			<% } %>
			</div>
			<!-- Upcoming movies display section -->
			<div class="row">
			<% for (var movie in movies) { %>
				<div class="col-sm-3" style="height: 368px;">
					<a href="/movies/<%= movies[movie].id %>">
						<img src="https://image.tmdb.org/t/p/w185<%= movies[movie].image_url %>" alt="<%= movies[movie].title %>" style="width: 185px; height: 278px;">
					</a>
					<div><%= movies[movie].title %></div>
					<div><%= movies[movie].release_date %></div>
				</div>
			<% } %>
			</div>
		</div>
	</body>
</html>